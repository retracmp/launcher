{
  "build": {
    "beforeDevCommand": "clear && yarn dev",
    "beforeBuildCommand": "clear && yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Retrac Launcher",
    "version": "1.0.10"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "protocol": {
        "all": true,
        "assetScope": ["*/**"]
      },
      "fs": {
        "all": true,
        "scope": ["*/**"]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "maximizable": false,
        "resizable": true,
        "title": "Retrac Launcher",
        "decorations": false,
        "center": true,
        "transparent": true,
        "minWidth": 400,
        "minHeight": 530
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "site.retrac",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": []
    }
  }
}
